<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="0 0 0 10" FontFamily="Helvetica" FontSize="16">
                Introduceti nume utilizator:
            </TextBlock>
            <TextBox Name="UsernameTextBox" Width="200" FontFamily="Helvetica" FontSize="16"/>
            <Button Content="Start Quiz" Width="200" FontFamily="Helvetica" FontSize="12" Margin="0 20 0 0" Click="StartQuizButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
