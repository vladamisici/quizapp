<Window x:Class="Evaluator.Views.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Question" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Question:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="QuestionTextBox" FontSize="16" Margin="0,0,0,20"/>

            <TextBlock Text="Answers (comma separated):" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="AnswersTextBox" FontSize="16" Margin="0,0,0,20"/>

            <TextBlock Text="Correct Answer Index:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="CorrectAnswerTextBox" FontSize="16" Margin="0,0,0,20"/>

            <TextBlock Text="Score:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="MaxScoreTextBox" FontSize="16" Margin="0,0,0,20"/>

            <Button Content="Add Question" FontSize="16" Click="AddQuestionButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
